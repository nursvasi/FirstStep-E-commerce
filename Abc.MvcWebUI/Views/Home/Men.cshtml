@using Abc.MvcWebUI.Models;
@model List<Abc.MvcWebUI.Entity.Product>
@{
    ViewBag.Title = "Men";
    ViewData["Title"] = "Men Products";
}

<style>
    .card {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        border-radius: 15px;
        margin: 0 auto;
        margin-top: 20px;
    }

    .card-body {
        text-align: left;
        max-height: 150px;
        overflow: hidden;
    }

    .card-title {
        font-size: 16px;
        font-weight: 400;
        color: #484848;
        line-height: 1.35em;
        height: 34px;
    }

    .card img {
        width: 100%;
        height: auto;
        max-width: 100%;
    }

    img {
        image-rendering: optimizeQuality;
    }
</style>


<div class="container pb-5">
    @{
        ViewData["Title"] = "Men " + (ViewBag.SelectedCategory ?? "") + " Products";
    }
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Men Products</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Men">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Men?categoryId=1">Casual</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Men?categoryId=2">Training</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Men?categoryId=3">Running</a>
                </li>
                <!-- Add more navigation items as needed -->
            </ul>
        </div>
    </nav>

    <div style="margin-bottom: 20px;">
        <img src="~/Upload/kadın jpg/nike/men.jpg" alt="Men Image" style="width: 100%; height: auto; max-width: 100%;" />

        <h2 style="display: inline-block;">@ViewData["Title"]</h2>

        <div class="dropdown" style="float: right; margin-top: 10px;">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort by Price
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/Home/Men?categoryId=@ViewBag.CategoryId&sortBy=asc">Lowest to Highest</a>
                <a class="dropdown-item" href="/Home/Men?categoryId=@ViewBag.CategoryId&sortBy=desc">Highest to Lowest</a>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var urun in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <img class="card-img-top" src="/Upload/@urun.Image" alt="@urun.Name" />
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/Home/Details/@urun.Id">@urun.Name</a>
                        </h4>
                        <p><strong>@urun.Subtitle</strong></p>
                        <p class="card-text pt-2 description">
                        <p>
                            @(urun.Description.Length > 30 ? urun.Description.Substring(0, 30) + "..." : urun.Description)
                        </p>
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted product-price">
                            <i class="aria-hidden" style="text"></i>
                            <strong>@urun.Price$</strong>
                        </small>
                        <a href="/Home/Details/@urun.Id" class="btn btn-default btn-sm float-right">
                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            View
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

