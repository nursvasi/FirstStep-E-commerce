@using Abc.MvcWebUI.Entity;
@model Product

@{
    ViewBag.Title = "Details";
}

<style>
    .img-card {
        position: relative;
        overflow: hidden;
        margin-top: 20px; /* Ustteki menuden biraz ayrilsin */
    }

    .carousel-inner img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

<div class="container">

    <!-- product section -->
    <section class="row product-container">
        <div id="mySlider" class="carousel slide col-md-6 img-card" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/Upload/@Model.Image" class="img-fluid rounded ">
                </div>
                <div class="carousel-item">
                    <img src="/Upload/@Model.Image2" class="img-fluid rounded ">
                </div>
                <div class="carousel-item">
                    <img src="/Upload/@Model.Image3" class="img-fluid rounded ">
                </div>


            </div>
            <!-- Ok düğmeleri -->
            <a class="carousel-control-prev" href="#mySlider" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#mySlider" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title" style="font-weight: bold;">
                        @Model.Name
                    @if (Model.IsApproved)
                    {
                        <span class="badge badge-primary">In Stock</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Not In Stock</span>
                    }
                </h1>

                <div class="price">
                    <h5 class="card-subtitle mb-2 text-muted">@Model.Price$ </h5>

                </div>
                <div class="sizes form-group" onclick="toggleSizeOptions()">
                    <label for="shoe-size">Shoe Size:</label>
                    <select name="ShoeSize" id="shoe-size" class="form-control size-option" size="1">
                        <option value="" disabled selected>Select Size</option>
                        <option value="42">42</option>
                        <option value="41">41</option>
                        <option value="40">40</option>
                        <option value="39">39</option>
                        <option value="39">38</option>
                        <option value="39">37</option>
                        <option value="39">36</option>
                        <option value="39">35</option>
                        <option value="39">34</option>
                    </select>
                </div>
                <div class="quantity form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="number" value="1" min="1" class="form-control">
                </div>

                @using (Html.BeginForm("AddToCart", "Cart"))
                {
                    @Html.HiddenFor(i => i.Id)
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        Add To Cart
                    </button>
                }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: bold;">Product Details</h5>
                    <p class="card-text">
                        @Model.Description
                    </p>

                </div>
            </div>
        </div>
    </section>
</div>



<!-- Bootstrap JS and jQuery -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<!-- Custom JS -->
<script>
    $(document).ready(function () {
        $('#mySlider').carousel();
    });
</script>