@model Abc.MvcWebUI.Entity.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Category Details</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4 class="mb-4">Category Information</h4>
            <hr />

            <dl class="row">
                <dt class="col-md-3">Name</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-md-3">Description</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>
    </div>
</div>
<p class="text-center mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
</p>
