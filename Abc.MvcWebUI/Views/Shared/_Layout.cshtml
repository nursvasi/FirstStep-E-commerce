<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <link rel="stylesheet" href="/theme/css/style.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
            padding-bottom: 0; /* Remove any default padding */
        }

        footer {
            margin-top: auto; /* Push the footer to the bottom */
            background-color: #f8f9fa; /* Background color */
            padding: 20px; /* Add padding to the footer */
            width: 100%; /* Make the width 100% of the viewport */
            text-align: center; /* Center the content inside the footer */
        }
        .footer-content {
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .footer hr {
            margin: 5px 0;
        }

        .footer p {
            margin: 5px 0;
        }

        .social-icons {
            list-style: none;
            padding: 0;
        }

            .social-icons li {
                display: inline-block;
                margin-right: 10px;
            }

            .social-icons i {
                font-size: 18px;
            }
        .footer a {
            color: #7D0A0A;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">First Step</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/List">Shop All</a>
                    <li class="nav-item dropdown" onmouseover="showDropdown('kadinDropdown')" onmouseout="hideDropdown('kadinDropdown')">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Women
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown" id="kadinDropdown" onmouseover="clearTimeout(hideTimeout)">
                            <a class="dropdown-item" href="/Home/Women">All</a>

                            <a class="dropdown-item" href="/Home/Women?categoryId=1">Casual</a>
                            <a class="dropdown-item" href="/Home/Women?categoryId=2">Training </a>
                            <a class="dropdown-item" href="/Home/Women?categoryId=3">Running </a>

                        </div>
                    </li>
                    <li class="nav-item dropdown" onmouseover="showDropdown('erkekDropdown')" onmouseout="hideDropdown('erkekDropdown')">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Men
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown2" id="erkekDropdown" onmouseover="clearTimeout(hideTimeout)">
                            <a class="dropdown-item" href="/Home/Men">All </a>

                            <a class="dropdown-item" href="/Home/Men?categoryId=1">Casual </a>
                            <a class="dropdown-item" href="/Home/Men?categoryId=2">Training </a>
                            <a class="dropdown-item" href="/Home/Men?categoryId=3">Running </a>

                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Kids">Kids</a>

                </ul>
                <form class="form-inline my-2 my-lg-0" action="@Url.Action("List", "Home")" method="get">
                    <input class="form-control mr-sm-2" type="text" name="searchString" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
                @Html.Action("Summary", "Cart")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <script>
        function showDropdown(id) {
            $("#" + id).addClass("show");
        }
        function hideDropdown(id) {
            hideTimeout = setTimeout(function () {
                $("#" + id).removeClass("show");
            }, 300); // Adjust the delay time (in milliseconds) as needed
        }
    </script>

    @RenderBody()

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h4>Contact Us</h4>
                    <p>123 Street, City, Country</p>
                    <p>Email: info@example.com</p>
                    <p>Phone: +123 456 7890</p>
                </div>
                <div class="col-md-4">
                    <h4>Follow Us</h4>
                    <ul class="social-icons">
                        <li><a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook"></i></a></li>
                        <li><a href="https://www.twitter.com" target="_blank"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram"></i></a></li>
                    </ul>

                </div>
                <div class="col-md-4">
                    <h4>First Step</h4>
                        <a class="nav-link" href="/Home">Home</a>
                        <a class="nav-link" href="/Home/List">Products</a>
                </div>
            </div>
            <hr>
            <p class="text-center">&copy; 2023 Your Company. All rights reserved.</p>
        </div>
    </footer>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="/theme/js/holder.min.js" type="text/javascript"></script>
</body>
</html> 