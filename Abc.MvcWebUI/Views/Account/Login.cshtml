@model Abc.MvcWebUI.Models.Login

@{
    ViewBag.Title = "title";
}
<style>
    .card {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        max-width: 500px;
        width: 100%;
        border-radius: 15px; /* Yuvarlak kenarlık ekleniyor */
        margin: 0 auto; /* Center the card */
        margin-top: 50px; /* Adjust top margin as needed */
    }

    .card-body {
        text-align: left;
    }

    form {
        max-width: 400px;
        margin: 0 auto;
    }

    .btn-primary {
        background-color: #ff416c;
        border: none;
    }

        .btn-primary:hover {
            background-color: #ff416c;
        }

    .btn-outline-secondary {
        color: #ff416c;
        border-color: #ff416c;
    }

        .btn-outline-secondary:hover {
            background-color: #ff416c;
            color: #fff;
        }
</style>
<div class="container pb-5">

    <h2>User Login</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <h1 class="text-center">Sign In</h1>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col-md-12">
                    <div class="form-group">
                        <label for="UserName" class="control-label">User Name:</label>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Password" class="control-label">Password:</label>
                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>


            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            <p class="text-center mt-3">Don't have an account? <a href="/Account/Register/" class="btn btn-outline-secondary btn-sm">Register</a></p>
        </div>
                
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
